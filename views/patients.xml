<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="patient_form_view">
            <field name="name">hospital.patients.form</field>
            <field name="model">hospital.patients</field>
            <field name="arch" type="xml">
                <form string="Patient">
                    <sheet>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" widget="char"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="partner_id"/>
                                <field name="identity" widget="char"/>
                                <field name="birthday"/>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="phone"/>
                                <field name="email"/>
                                <field name="address" widget="text"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Medical History">
                                <field name="tickets_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="start_date"/>
                                        <field name="consultation_notes"/>
                                        <field name="prescription_notes"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Diagnose">

                            </page>
                            <page string="Prescription">

                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <record model="ir.ui.view" id="patients_tree_view">
            <field name="name">hospital.patients.tree</field>
            <field name="model">hospital.patients</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="partner_id"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="activity_ids"/>
                    <!--                    <field name="medical_history"/>-->
                </tree>
            </field>
        </record>


        <!-- Define the action -->
        <record id="action_hospital_patients"
                model="ir.actions.act_window">
            <field name="name">Patients</field>
            <field name="res_model">hospital.patients</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new patient.
                </p>
            </field>
        </record>

        <menuitem id="hospital_menu_patients" name="Patients"
                  parent="menu_hospital_hospital"
                  action="action_hospital_patients" sequence="23"/>

    </data>
</odoo>
