<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_staff_form" model="ir.ui.view">
            <field name="name">hospital.staff.form</field>
            <field name="model">hospital.staff</field>
            <field name="arch" type="xml">
                <form string="Staff">
                    <header>
                    </header>
                    <sheet>
                        <div class="oe_button_box"
                             name="button_box">
                            <button name="object_open_tickets_timeframe"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="tickets_count"/>
                                    <span class="o_stat_text">Tickets</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name" widget="char"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="employee_id"/>
                                <field name="job_title"/>
                                <field name="specialization"/>
                                <field name="age" widget="integer"/>
                                <field name="gender"/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="address" widget="email"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       widget="selection"/>
                                <field name="currency_id"
                                       widget="selection"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tickets">
                                <field name="tickets_ids">
                                    <tree string="Tickets">
                                        <field name="name"/>
                                        <field name="clinics_id"/>
                                        <field name="patients_id"/>
                                        <field name="staff_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="invoice_amount"/>
                                        <field name="payment_amount"/>
                                        <field name="payment_date"/>
                                        <field name="company_id"
                                               groups="base.group_multi_company"/>
                                        <field name="currency_id"/>
                                        <field name="user_id"/>
                                        <field name="active" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="staff_tree_view">
            <field name="name">hospital.staff.tree</field>
            <field name="model">hospital.staff</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="job_title"/>
                    <field name="birthday"/>
                    <field name="age"/>
                    <field name="gender"/>
                    <field name="phone" widget="phone"/>
                    <field name="email" widget="email"/>
                    <field name="address"/>
                    <field name="specialization"/>
                    <field name="company_id"
                           groups="base.group_multi_company"
                           widget="selection"/>
                    <field name="currency_id"
                           widget="selection"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <!-- Define the action -->
        <record id="action_hospital_staff" model="ir.actions.act_window">
            <field name="name">Staffs</field>
            <field name="res_model">hospital.staff</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new staff.
                </p>
            </field>
        </record>
        <menuitem id="hospital_menu_staff" name="Staff"
                  parent="menu_hospital_hospital"
                  action="action_hospital_staff" sequence="22"/>
    </data>
</odoo>
