<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- Define the menu -->
        <menuitem id="clinics_parent_menu" name="Clinics" sequence="10"/>

        <!-- Define the action -->
        <record id="action_clinics_tree" model="ir.actions.act_window">
            <field name="name">Clinics</field>
            <field name="res_model">hospital.clinics</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new clinics.
                </p>
            </field>
        </record>

        <record model="ir.ui.view" id="clinics_tree_view">
            <field name="name">hospital.clinics.tree</field>
            <field name="model">hospital.clinics</field>
            <field name="arch" type="xml">
                <tree string="Clinics">
                    <field name="name"/>
                    <field name="location"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="website"/>
                    <field name="is_active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="clinics_form_view">
            <field name="name">hospital.clinics.form</field>
            <field name="model">hospital.clinics</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div role="alert"
                        class="alert alert-warning"
                        attrs="{'invisible': [('analytic_account_id', '!=', False)]}">
                        Create analytic account. bills, invoices and stock move depending on that.
                    </div>
                        <group>
                            <field name="name"/>
                            <field name="location"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="email"/>
                            <field name="website"/>
                            <field name="is_active"/>
                        </group>
                        <notebook>
                            <page string="Doctors">
                            </page>
                            <page string="Patients">
                                <field name="patients" widget="one2many_list"/>
                            </page>
                            <page string="Pharmacies">

                            </page>
                            <page string="Transactions">

                            </page>
                            <page string="Appointments">

                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Define the menuitem that points to the action -->
        <menuitem id="menu_clinics_tree" name="Clinics"
                  parent="clinics_parent_menu"
                  action="action_clinics_tree" sequence="10"/>

    </data>
</odoo>
