<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="clinics_form_view"
                model="ir.ui.view">
            <field name="name">hospital.clinics.form</field>
            <field name="model">hospital.clinics</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_button_box"
                             name="button_box">
                            <button name="object_open_tickets_timeframe"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-calendar">
                                <div class="o_stat_info">
                                    <field name="tickets_count"/>
                                    <span class="o_stat_text">Tickets</span>
                                </div>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label for="name" class="oe_edit_only"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="type"/>
                                <field name="location"/>
                                <field name="address"/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                                <field name="fees_rate"/>
                            </group>
                            <group>
                                <field name="company_id"
                                       groups="base.group_multi_company"
                                       widget="selection"/>
                                <field name="currency_id"
                                       widget="selection"/>
                                <field name="active"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Tickets">
                                <field name="tickets_ids">
                                    <tree string="Tickets">
                                        <field name="name"/>
                                        <field name="clinics_id"/>
                                        <field name="patients_id"/>
                                        <field name="staff_id"/>
                                        <field name="start_date"/>
                                        <field name="end_date"/>
                                        <field name="billing_amount"/>
                                        <field name="payment_amount"/>
                                        <field name="payment_date"/>
                                        <field name="company_id"
                                               groups="base.group_multi_company"/>
                                        <field name="currency_id"/>
                                        <field name="user_id"/>
                                        <field name="active" invisible="1"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="clinics_tree_view"
                model="ir.ui.view">
            <field name="name">hospital.clinics.tree</field>
            <field name="model">hospital.clinics</field>
            <field name="arch" type="xml">
                <tree string="Clinics">
                    <field name="name"/>
                    <field name="type"/>
                    <field name="location"/>
                    <field name="address"/>
                    <field name="phone"/>
                    <field name="email"/>
                    <field name="fees_rate"/>
                    <field name="company_id"
                           groups="base.group_multi_company"
                           widget="selection"/>
                    <field name="currency_id" widget="selection"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <!-- Define the action -->
        <record id="action_hospital_clinics"
                model="ir.actions.act_window">
            <field name="name">Clinics</field>
            <field name="res_model">hospital.clinics</field>
            <field name="view_mode">tree,form</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new clinics.
                </p>
            </field>
        </record>
        <menuitem id="hospital_menu_clinics"
                  name="Clinics"
                  parent="menu_hospital_hospital"
                  action="action_hospital_clinics"
                  sequence="21"/>
    </data>
    <data>
        <record id="clinic_type_tree_view"
                model="ir.ui.view">
            <field name="name">hospital.clinic.type.tree</field>
            <field name="model">hospital.clinic.type</field>
            <field name="arch" type="xml">
                <tree string="Clinics" editable="bottom">
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="action_hospital_clinic_type"
                model="ir.actions.act_window">
            <field name="name">Clinic Type</field>
            <field name="res_model">hospital.clinic.type</field>
            <field name="view_mode">tree</field>
            <field name="domain"/>
            <field name="context"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Click here to add a new Clinic Type.
                </p>
            </field>
        </record>
        <menuitem id="hospital_menu_clinic_type"
                  name="Clinic Type"
                  action="action_hospital_clinic_type"
                  parent="hospital_menu_configuration"
                  sequence="51"/>
    </data>
</odoo>
