<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="services_form_view" model="ir.ui.view">
            <field name="name">hospital.services.form</field>
            <field name="model">hospital.services</field>
            <field name="arch" type="xml">
                <form string="Service">
                    <sheet>
                        <div class="oe_title">
                            <label for="Name"/>
                            <h1>
                                <field name="name"
                                       placeholder="housekeeping"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="description"/>
                            </group>
                            <group>
                                <field name="unit_price"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="services_tree_view" model="ir.ui.view">
            <field name="name">hospital.services.tree</field>
            <field name="model">hospital.services</field>
            <field name="arch" type="xml">
                <tree string="Services">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="unit_price"/>
                </tree>
            </field>
        </record>

        <record id="services_search_view" model="ir.ui.view">
            <field name="name">hospital.services.search</field>
            <field name="model">hospital.services</field>
            <field name="arch" type="xml">
                <search string="Services">
                    <group expand="1" string="Group By">
                        <filter string="Example Field" name="example_field"
                                domain="[]"
                                context="{'group_by':'example_field'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="services_act_window" model="ir.actions.act_window">
            <field name="name">ModelTitle</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">.services</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    There is no examples click here to add new ModelTitle.
                </p>
            </field>
        </record>

        <menuitem name="ModelTitle" id="services_menu" parent="your_root_menu"
                  action="services_act_window"/>

    </data>
</odoo>